    <!-- 메뉴 -->
    <nav class="navigation-bar">
        <a href="#">
            <img class="navigation-bar__logo" src="/img/main/logo_picaboo.png" alt="">
        </a>
        <div class="navigation-bar__menu">
            <ul class="menu-list">
                <a href="#"><li>명함소개</li></a>
