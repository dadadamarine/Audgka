    <div class="section section--black">
        <div class="left">
            <div class="login-box">
                <div class="login-box__logo">
                    <img src="https://image.ibb.co/hW1YHq/login-logo.png" alt="Sluralpright">
                    <!-- <img src="https://image.ibb.co/cO9Lxq/login-bg.jpg
                    " alt=""> -->
                </div>
                <form action="/auth/login" method="post">
                    <div class="login-box__id">
                        <label>Email Or Username</label>
                        <input name="userId" type="text">
                    </div>
                    <div class="login-box__password">
                        <label>Password</label>
                        <input name="userPW" type="password">
                    </div>
                    <button type="submit" class="login-button login-button--long-orange">Sign In</button>
                </form>
                <div class="sixty">
                    <div class="links">
                        <a href="#">Forgot Password</a>
                        <a href="#">Sign in with company or school</a>
                    </div>
                    <div class="or">
                        <hr class="bar">
                        <span>OR</span>
                        <hr class="bar">
                    </div>
                    <a href="./signup" class="login-button login-button--normal-black">Create an account</a>

                
                    <div class="login-footer">
